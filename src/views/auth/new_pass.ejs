<%- include('../partials/header'); -%>
<meta name="csrf-token" content="<%= csrfToken %>">
<meta name="reset-token" content="<%= resetToken %>">

<form>
    <h2>Set a new password</h2>

    
    <label for="password">New password</label>
    <input type="password" name="password" required>
    <div class="password error"></div>
    <button>Change password</button>

</form>
    
<script>
    
    const form = document.querySelector('form')

    const passwordError = document.querySelector('.password.error')
    const token = document.querySelector('meta[name="csrf-token"]').getAttribute('content')
    const resetToken = document.querySelector('meta[name="reset-token"]').getAttribute('content')
    //console.log(resetToken)

    form.addEventListener('submit', async (e) => {
        e.preventDefault()

        // reset errors
        passwordError.textContent = ""

        // get the values
        const password = form.password.value

        try{
            const res = await fetch(`/new_pass/`, {
                credentials: 'same-origin',
                method: 'POST',
                body: JSON.stringify({resetToken, password}),
                headers: {
                    'Content-Type': 'application/json',
                    'CSRF-Token': token // <-- is the csrf token as a header
                }
            })
            const data = await res.json()
            
            if(data.errors) {

                passwordError.textContent = data.errors.password
            }
            if(data.user){
                form.innerHTML = `<p>Your password has been changed. You can now <a class='login-link' href='/login'>login</a> with it.</p>`
            }
        }
        catch (err) {
            console.log(err) 
        }

        
    })
</script>

<%- include('../partials/footer'); -%>