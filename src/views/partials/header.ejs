        <ul class="mobile-nav__items">
          <% if (user) { %>
                    
            <span class="text-muted mr-1">
              Привет, <%= user.username %>
            </span>
            <li class="nav-item">
              <a href="/logout" class="mobile-nav__item ">Выйти</a>
