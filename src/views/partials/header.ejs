

<!DOCTYPE html>
<html lang="ru">

  <%- include('head-tag'); -%>


<body id='home' data-target='#main-nav'>
  <% if (user) { %>
    <script>
      const user = <%- user  %>  
    </script>


  <!-- connect to socket only if the user is logged -->
  <script src="/socket.io/socket.io.js"></script>
  <script src="/js/clientConnectSocket.js"></script>

  <% } %> 

    

    <div class="backdrop"></div>
    <header class="main-header">
      <div class="main-header_brand-holder">
        <a class="mobile-menu__toggle-button">
          <i class="fas fa-bars"></i>
        </a>
        <div class="main-header__brand">
          <a href="/">IndicatorGames</a>
        </div>
        
      </div>

        <nav class="main-nav">
          <ul class="main-nav__items">
            <% if (user) { %>
                      
              <span class="text-muted mr-1">
